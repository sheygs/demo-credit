{
  "name": "demo-credit",
  "version": "0.0.1",
  "description": "Demo Credit is a mobile lending app with wallet functionality for borrowers to receive loans and make repayments.",
  "main": "./dist/src/index.js",
  "scripts": {
    "prod": "node ./dist/src/index.js",
    "dev": "nodemon --exec \"npm run build && npm run prod\" --watch src --ext ts",
    "build": "tsc",
    "clean": "rm -rf dist",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prettify": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "prettify:check": "prettier --check \"**/*.+(js|ts|json)\"",
    "test": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test jest --runInBand --watch",
    "test:cov": "cross-env NODE_ENV=test jest --coverage",
    "build:image": "docker build -t demo-credit-api .",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "migrate": "ts-node ./src/shared/scripts/table.ts",
    "prepare": "husky"
  },
  "keywords": [
    "lending",
    "wallet",
    "api",
    "fintech"
  ],
  "author": "Olusegun Ekoh (sheygs)",
  "repository": "https://github.com/sheygs/demo-credit.git",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.0",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "eslint": "^8.57.0",
    "globals": "^15.3.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.12.0"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "husky": "^9.0.11",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "mysql2": "^3.10.1",
    "paystack-sdk": "^2.5.16",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.13.0"
  },
  "engines": {
    "node": ">= 20.0.0"
  }
}
